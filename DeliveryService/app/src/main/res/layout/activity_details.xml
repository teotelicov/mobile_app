<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.ubbcluj.ro.deliveryservice.DetailsActivity">

    <TextView
        android:id="@+id/text_view_details"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorBlue"
        android:text="Product details"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"/>

    <ListView
        android:id="@+id/list_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_details"
        android:layout_marginBottom="70dp"
        android:divider="@null"
        android:dividerHeight="7.0sp"/>

    <Button
        android:id="@+id/generateChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/list_details"
        android:text="Price Chart" />

    <TextView
        android:id="@+id/text_view_delivery"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        android:text="DeliveryServices"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@+id/generateChart"/>

    <ListView
        android:id="@+id/list_deliveries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_delivery"
        android:divider="@null"
        android:dividerHeight="10.0sp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="50dp"
        />


</android.support.constraint.ConstraintLayout>
